{
    "function": "solution",
    "test_cases": [
        {
            "name": "ReLU mixed values",
            "input": {"x": [-2, -1, 0, 1, 2], "variant": "relu"},
            "expected": [0, 0, 0, 1, 2]
        },
        {
            "name": "ReLU all positive",
            "input": {"x": [1, 2, 3], "variant": "relu"},
            "expected": [1, 2, 3]
        },
        {
            "name": "ReLU all negative",
            "input": {"x": [-5, -3, -1], "variant": "relu"},
            "expected": [0, 0, 0]
        },
        {
            "name": "Leaky ReLU mixed",
            "input": {"x": [-2, -1, 0, 1, 2], "variant": "leaky_relu", "alpha": 0.01},
            "expected": [-0.02, -0.01, 0, 1, 2]
        },
        {
            "name": "ELU positive pass-through",
            "input": {"x": [0, 1, 2, 3], "variant": "elu", "alpha": 1.0},
            "expected": [0, 1, 2, 3]
        },
        {
            "name": "ReLU single zero",
            "input": {"x": [0], "variant": "relu"},
            "expected": [0]
        }
    ]
}
