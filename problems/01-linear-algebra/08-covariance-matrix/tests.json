{
    "function": "solution",
    "test_cases": [
        {
            "name": "2 features perfectly correlated",
            "input": [[1, 2], [2, 4], [3, 6]],
            "expected": [[1.0, 2.0], [2.0, 4.0]]
        },
        {
            "name": "2 features uncorrelated",
            "input": [[1, 0], [0, 1], [-1, 0], [0, -1]],
            "expected": [[0.6666666667, 0.0], [0.0, 0.6666666667]]
        },
        {
            "name": "identical features",
            "input": [[1, 1], [2, 2], [3, 3]],
            "expected": [[1.0, 1.0], [1.0, 1.0]]
        },
        {
            "name": "single feature",
            "input": [[1], [3], [5]],
            "expected": [[4.0]]
        },
        {
            "name": "3 features",
            "input": [[1, 2, 3], [4, 5, 6], [7, 8, 9]],
            "expected": [[9.0, 9.0, 9.0], [9.0, 9.0, 9.0], [9.0, 9.0, 9.0]]
        }
    ]
}
